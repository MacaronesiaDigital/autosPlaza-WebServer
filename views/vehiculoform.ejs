    <style>
      body {
        font-family: Arial, sans-serif;
      }
      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
      }
      h1 {
        margin-bottom: 20px;
        color:white;
      }
      form {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 5px;
      }

      .form-group {
        margin-bottom: 20px; /* Add margin between form groups */
      }

      label {
        font-weight: bold;
      }
      input[type="checkbox"] {
        margin-right: 10px;
      }
      input[type="text"],
      textarea {
        width: 100%;
        padding: 5px;
        margin: 5px 0;
        border: 1px solid #ccc;
        border-radius: 3px;
      }
      button[type="submit"] {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
      }

      
      
    </style>

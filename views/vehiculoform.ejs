  <body>
    <section class="vh-100" style="background-color: #508bfc;">
    <div class="container">
      <h1 class="mt-4">Detalles de veh√≠culo</h1>
      <form method="post" action="/updateCar">
        <div class="form-group">
          <label for="depType">Deposit Type:</label>
          <div class="input-field">
            <input type="checkbox" name="depType" value="Type1"> Type1
            <input type="checkbox" name="depType" value="Type2"> Type2
            <!-- Add more options as needed -->
          </div>
        </div>
        
        <div class="form-group">
          <label for="trunkType">Trunk Type:</label>
          <div class="input-field">
            <input type="checkbox" name="trunkType" value="Type1"> Type1
            <input type="checkbox" name="trunkType" value="Type2"> Type2
            <!-- Add more options as needed -->
          </div>
        </div>
        
        <div class="form-group">
          <label for="revType">Reverse Type:</label>
          <div class="input-field">
            <input type="checkbox" name="revType" value="Type1"> Type1
            <input type="checkbox" name="revType" value="Type2"> Type2
            <!-- Add more options as needed -->
          </div>
        </div>
  
        <div class="form-group">
          <label for="carImages">Car Images:</label>
          <div class="input-field">
            <input type="file" name="carImages" accept="image/*" multiple>
          </div>
        </div>
  
        <div class="form-group">
          <label for="notes">Notes:</label>
          <div class="input-field">
            <textarea name="notes" rows="4"></textarea>
          </div>
        </div>

        <div>
        </div>
      </form>
      
    </div>

    

